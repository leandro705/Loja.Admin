@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {

}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Contato Estabelecimento</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Contato Estabelecimento</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">

    <div class="col-md-6">
        <div class="card">
            <div class="card-body" data-bind="with:estabelecimento">

                <h4 class="mt-3 mb-0 text-center" data-bind="text:nome"></h4>
                <p class="text-muted  text-center" data-bind="text:email"></p>

                <h4 class="font-13 text-uppercase">Descrição :</h4>
                <p class="text-muted font-13 mb-3" data-bind="text:descricao"></p>

                <div class="table-responsive">
                    <table class="table table-borderless table-sm">
                        <tbody>
                            <tr>
                                <th scope="row">Celular :</th>
                                <td class="text-muted" data-bind="text:celular"></td>
                            </tr>
                            <tr>
                                <th scope="row">Telefone :</th>
                                <td class="text-muted" data-bind="text:telefone"></td>
                            </tr>
                            <tr>
                                <th scope="row">Instagram :</th>
                                <td class="text-muted" data-bind="text:instagram"></td>
                            </tr>
                            <tr>
                                <th scope="row">Facebook :</th>
                                <td class="text-muted" data-bind="text:facebook"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/estabelecimentoContato.min.js"></script>
}