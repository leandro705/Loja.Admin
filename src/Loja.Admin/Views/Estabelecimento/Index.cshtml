@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {
    <link href="~/css/datatable.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Estabelecimentos</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Estabelecimentos</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- ko if:  permiteCadastrar() -->
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-controller="Estabelecimento" asp-action="Cadastro" class="btn btn-primary waves-effect waves-light mb-3">
                <i class="fa fa-plus-circle mr-1"></i> Novo
            </a>
        </div>
    </div>
</div>
<!-- /ko-->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="datatable-estabelecimento" class="table table-striped dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nome</th>
                                    <th>E-mail</th>
                                    <th>Celular</th>
                                    <th>Data Cadastro</th>
                                    <th>Situação</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: estabelecimentos">
                                <tr>
                                    <td data-bind="text: estabelecimentoId"></td>
                                    <td data-bind="text: nome"></td>
                                    <td data-bind="text: email"></td>
                                    <td data-bind="text: celular"></td>
                                    <td data-bind="text: dataCadastro"></td>
                                    <td data-bind="text: situacao"></td>
                                    <td>
                                        <button type="button" class="btn btn-success waves-effect waves-light" title="Dados Estabelecimento" data-bind="click: $parent.contato"><i class="mdi mdi-eye-outline"></i></button>
                                        <button type="button" class="btn btn-warning waves-effect waves-light" title="Editar" data-bind="click: $parent.editar"><i class="mdi mdi-pencil-outline"></i></button>
                                        <button type="button" class="btn btn-danger waves-effect waves-light" title="Excluir" data-bind="click: $parent.excluir, visible: $parent.permiteExcluir()"><i class="mdi mdi-trash-can-outline"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/datatable.min.js"></script>
    <script src="~/js/estabelecimento.min.js"></script>
}