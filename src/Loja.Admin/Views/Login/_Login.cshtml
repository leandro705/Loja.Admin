@{ Layout = null; }

<div class="col-md-8 col-lg-6 col-xl-5">
    <div class="card">
        <div class="card-body p-4">
            <div class="text-center w-75 m-auto">
                <!-- ko if:  estabelecimento() != null -->
                <h2 data-bind="text: estabelecimento().nome()"></h2>
                <!-- /ko-->
                <!-- ko if:  estabelecimento() == null -->
                <div class="auth-logo">
                    <a href="index.html" class="logo logo-dark text-center">
                        <span class="logo-lg">
                            <img src="~/assets/images/logo-dark.png" alt="" height="22">
                        </span>
                    </a>
                </div>
                <!-- /ko-->
            </div>

            <form action="#" class="mt-3">
                <div class="form-group mb-2">
                    <input class="form-control" type="email" data-bind="value: email" required placeholder="E-mail">
                </div>
                <div class="form-group mb-3">
                    <div class="input-group input-group-merge">
                        <input type="password" id="password" data-bind="value: senha" class="form-control" placeholder="Senha">
                        <div class="input-group-append" data-password="false">
                            <div class="input-group-text">
                                <span class="password-eye"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <button class="btn btn-primary btn-block" type="button" data-bind="click: login"> Entrar </button>
                </div>
            </form>

            <div class="text-center">
                <h5 class="mt-3 text-muted">Entrar com</h5>

                <div class="form-group"> 
                    <div id="google-root">                        
                        <div id="customBtn" class="customGPlusSignIn">
                            <div class="divIcon">
                                <span class="icon"></span>
                            </div>
                            <div class="divText">
                                <span class="buttonText">Continuar com Google</span>
                            </div>
                        </div>
                    </div>                   
                </div>

                <div class="form-group">
                    <div class="fb-login-button"
                         data-size="large"
                         data-button-type="login_with"
                         data-layout="default"
                         data-auto-logout-link="false"
                         data-use-continue-as="true"
                         data-width="380"
                         data-scope="public_profile,email"
                         onlogin="checkLoginState();">
                    </div>
                    <div id="fb-root"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6 text-center">
            <p> <a href="#Recuperacao" data-bind="click: function() { $root.alterarTela(ETelaLogin.RECUPERACAO); }" class="text-muted ml-1">Recuperar senha?</a></p>
        </div>
        <div class="col-6 text-center">
            <p> <a href="#Cadastro" data-bind="click: function() { $root.alterarTela(ETelaLogin.CADASTRO); }" class="text-muted ml-1">Novo Cadastro?</a></p>
        </div>
    </div>
</div>