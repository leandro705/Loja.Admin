@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {

}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Visualizar Agendamento</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Visualizar Agendamento</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" data-bind="with:agendamento">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Data Agendamento:</label><br />
                        <span class="text-muted" data-bind="text: dataAgendamentoStr"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Situação:</label><br />
                        <span class="text-muted" data-bind="text: situacao"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Horário Inicial:</label><br />
                        <span class="text-muted" data-bind="text: horaInicial"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Horário Final:</label><br />
                        <span class="text-muted" data-bind="text: horaFinal"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Cliente:</label><br />
                        <span class="text-muted" data-bind="text: usuarioNome"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Serviço:</label><br />
                        <span class="text-muted" data-bind="text: servicoNome"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Estabelecimento:</label><br />
                        <span class="text-muted" data-bind="text: estabelecimentoNome"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Observação:</label><br />
                        <span class="text-muted" data-bind="text: observacao"></span>
                    </div>
                </div>                
                <div class="form-group float-right">
                    <button type="button" class="btn btn-secondary mr-1" data-bind="click: $parent.voltar">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/agendamentoVisualizar.min.js"></script>
}