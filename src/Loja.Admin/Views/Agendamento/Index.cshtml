@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {
    <link href="~/css/datatable.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Agendamentos</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Agendamentos</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-controller="Agendamento" asp-action="Cadastro" class="btn btn-primary waves-effect waves-light mb-3">
                <i class="fa fa-plus-circle mr-1"></i> Novo
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="datatable-agendamento" class="table table-striped dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Data Agendamento</th>
                                    <th>Data Final Agendamento</th>
                                    <th>Cliente</th>
                                    <th>Serviço</th>
                                    <th>Situação</th>
                                    <th>Estabelecimento</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: agendamentos">
                                <tr>
                                    <td data-bind="text: agendamentoId"></td>
                                    <td data-bind="text: dataAgendamentoStr() + ' ' + horaInicial()"></td>
                                    <td data-bind="text: dataFinalAgendamentoStr"></td>
                                    <td data-bind="text: usuarioNome"></td>
                                    <td data-bind="text: servicoNome"></td>
                                    <td data-bind="text: situacao"></td>
                                    <td data-bind="text: estabelecimentoNome"></td>
                                    <td>
                                        <button id="btnIniciarAtendimento" type="button" class="btn btn-success waves-effect waves-light" title="Iniciar Atendimento" data-bind="value: agendamentoId, visible: situacao() == 'Ativo'"><i class="mdi mdi-tag-multiple-outline"></i></button>
                                        <button id="btnVisualizar" type="button" class="btn btn-info waves-effect waves-light" title="Visualizar" data-bind="value: agendamentoId"><i class="mdi mdi-eye-outline"></i></button>
                                        <button id="btnEditar" type="button" class="btn btn-warning waves-effect waves-light" title="Editar" data-bind="value: agendamentoId, visible: situacao() == 'Ativo'"><i class="mdi mdi-pencil-outline"></i></button>
                                        <button id="btnExcluir" type="button" class="btn btn-danger waves-effect waves-light" title="Excluir" data-bind="value: agendamentoId, visible: situacao() == 'Ativo'"><i class="mdi mdi-trash-can-outline"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/datatable.min.js"></script>
    <script src="~/js/agendamento.min.js"></script>
}