@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {

}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Visualizar Atendimento</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Visualizar Atendimento</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" data-bind="with:atendimento">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Data Atendimento:</label><br />
                        <span class="text-muted" data-bind="text: dataAtendimento"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Situação:</label><br />
                        <span class="text-muted" data-bind="text: situacao"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Cliente:</label><br />
                        <span class="text-muted" data-bind="text: usuarioNome"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Estabelecimento:</label><br />
                        <span class="text-muted" data-bind="text: estabelecimentoNome"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Valor:</label><br />
                        <span class="text-muted" data-bind="text: valor"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Desconto:</label><br />
                        <span class="text-muted" data-bind="text: desconto"></span>
                    </div>                   
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Valor Total:</label><br />
                        <span class="text-muted" data-bind="text: valorTotal"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Observação:</label><br />
                        <span class="text-muted" data-bind="text: observacao"></span>
                    </div>
                </div>              
                <div class="table-responsive">
                    <table class="table table-sm table-bordered mb-0 col-md-8">
                        <thead class="thead-light">
                            <tr>
                                <th>Serviço</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: atendimentoItens">
                            <tr>
                                <td data-bind="text: servicoNome"></td>
                                <td data-bind="text: valor"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="form-group float-right">
                    <button type="button" class="btn btn-secondary mr-1" data-bind="click: $parent.voltar">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/atendimentoVisualizar.min.js"></script>
}