@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {
    <link href="~/css/datatable.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Serviços</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Serviços</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-controller="Servico" asp-action="Cadastro" class="btn btn-primary waves-effect waves-light mb-3">
                <i class="fa fa-plus-circle mr-1"></i> Novo
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="datatable-servico" class="table table-striped dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nome</th>
                                    <th>Valor</th>
                                    <th>Duração (mim)</th>
                                    <th>Data Cadastro</th>
                                    <th>Situação</th>
                                    <th>Estabelecimento</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: servicos">
                                <tr>
                                    <td data-bind="text: servicoId"></td>
                                    <td data-bind="text: nome"></td>
                                    <td data-bind="text: valor"></td>
                                    <td data-bind="text: duracao"></td>
                                    <td data-bind="text: dataCadastro"></td>
                                    <td data-bind="text: situacao"></td>
                                    <td data-bind="text: estabelecimentoNome"></td>
                                    <td>
                                        <button id="btnDesativar" type="button" class="btn btn-secondary waves-effect waves-light" title="Desativar" data-bind="value: servicoId, visible: situacao() == 'Ativo'"><i class="mdi mdi-cancel"></i></button>
                                        <button id="btnAtivar" type="button" class="btn btn-success waves-effect waves-light" title="Ativar" data-bind="value: servicoId, visible: situacao() == 'Inativo'"><i class="mdi mdi-replay"></i></button>
                                        <button id="btnEditar" type="button" class="btn btn-warning waves-effect waves-light" title="Editar" data-bind="value: servicoId"><i class="mdi mdi-pencil-outline"></i></button>                                        
                                        <button id="btnExcluir" type="button" class="btn btn-danger waves-effect waves-light" title="Excluir" data-bind="value: servicoId"><i class="mdi mdi-trash-can-outline"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/datatable.min.js"></script>
    <script src="~/js/servico.min.js"></script>
}