@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contents {

}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Visualizar Serviço</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Visualizar Serviço</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" data-bind="with:servico">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Nome:</label><br />
                        <span class="text-muted" data-bind="text: nome"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Valor:</label><br />
                        <span class="text-muted" data-bind="text: valor"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Duração (minutos):</label><br />
                        <span class="text-muted" data-bind="text: duracao"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Estabelecimento:</label><br />
                        <span class="text-muted" data-bind="text: estabelecimentoNome"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Situação:</label><br />
                        <span class="text-muted" data-bind="text: situacao"></span>
                    </div>                   
                </div>
                <div class="form-group float-right">
                    <button type="button" class="btn btn-secondary mr-1" data-bind="click: $parent.voltar">Voltar</button>
                </div>                
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/servicoVisualizar.min.js"></script>
}